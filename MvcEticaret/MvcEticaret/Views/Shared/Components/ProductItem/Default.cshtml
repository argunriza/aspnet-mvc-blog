@model ProductItemModel
<div class="col mb-5">
    <div class="card h-100">
        <!-- Sale badge-->
        @{
            if (Model.IsSale == true)
            {
                <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
            }
        }
        <!-- Product image-->
        <img class="card-img-top" src="@Model.ImageUrl" alt="..." />
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@Model.Title</h5>
                <!-- Product reviews-->
                @{
                    if (Model.StarCount == 5)   //Burda aslında switch case kullanmak daha mantıklı her bir yıldız olasılığı için fakat template'de sadece 5 yıldız gözüküyor gerek yok.
                    {
                        <div class="d-flex justify-content-center small text-warning mb-2">
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                        </div>
                    }
                }
                
                <!-- Product price-->
                <span class="text-muted text-decoration-line-through">@Model.OldPrice</span>
                @Model.Price
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            @{
                if (Model.IsSale == true)
                {
                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                }
                else
                {
                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">View options</a></div>
                }
            }
            
        </div>
    </div>
</div>